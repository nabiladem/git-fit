# Frontend environment variables
# API URL your React app will call
VITE_APP_API_URL=http://localhost:8080/api

# Backend server environment variables
PORT=8080

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# NASA API (for test image) [optional]
# Get your API key from https://api.nasa.gov/
NASA_API_KEY=your_api_key_here

# Gravatar OAuth (for CLI -upload-gravatar flag)
# Get these from https://gravatar.com/developers/applications
GRAVATAR_CLIENT_ID=126407
GRAVATAR_CLIENT_SECRET=your_client_secret_here
GRAVATAR_REDIRECT_URI=http://localhost:8080/callback
